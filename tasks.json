{
    "version": "3.0.0",
    "tasks": [
        {
            "label": "Compile and Run",
            "type": "shell",
            "command": "",
            "args": [
                "c++",
                "-g",
                "${relativeFile}",
                "-std=c++17",
                "-o",
                "${fileBasenameNoExtension}.out",
                "&&",
                "clear",
                "&&",
                "timeout",
                "10",
                "/usr/bin/time",
                "-v",
                "--output",
                "sys.txt",
                "./${fileBasenameNoExtension}.out",
                "<",
                "input.txt",
                ">",
                "output.txt",
                "&&",
                "rm",
                "*out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "type": "shell",
            "label": "CF-Test",
            "command": "clear&&cf test ${fileBasename}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CF-Submit",
            "command": "clear&&cf submit ${fileBasename}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CF-Menu",
            "command": "clear&&cf ${input:CFFunction}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CF-MenuContest",
            "command": "clear&&cf ${input:CFFunctionMin} ${input:CFContestID}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "CFContestID",
            "description": "Contest ID",
            "type": "promptString"
        },
        {
            "id": "CFFunction",
            "description": "Select operation",
            "type": "pickString",
            "options": [
                "list",
                "watch",
                "parse",
                "test",
                "submit",
                "open",
                "stand",
                "sid",
                "pull",
                "upgrade"
            ],
        },
        {
            "id": "CFFunctionMin",
            "description": "Select operation",
            "type": "pickString",
            "options": [
                "race",
                "parse"
            ],
        }
    ]
}
